
<div class="container text-center">
  <h1><%= @cocktail.name %></h1>

  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td scope="row"><%= dose.ingredient.name %></td>
        <td scope="row"><%= dose.description %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <h3>Add a new ingredient</h3>

  <div class="container">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient, prompt: "Choose an ingredient" %>
      <%= f.button :submit, class: 'btn btn-ghost'%>
      <%= link_to "Cancel", cocktails_path, class: "btn btn-ghost" %>
    <% end %>
  </div>
</div>


